@using SecondMVCAppWithDB.Models;
@{
    ViewBag.Title = "ShowAllCategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowAllCategoryList</h2>

<h2>Categoty List</h2>
@Html.ActionLink("Create Category", "Create", "", new { @class = "nav nav-pills" })

@*<table class="table table-striped">*@
    <table class="table table-hover">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Description</th>
    </tr>
    @*@foreach (var item in (IEnumerable<Category>)ViewData["catlist"])*@
        @foreach (var item in (IEnumerable<Category>)TempData["catlist"])
        {
            <tr>
                <td>@item.catid</td>
                <td>@item.catname</td>
                <td>@item.Description</td>
                <td>
                    @Html.ActionLink("Edit Category", "Edit", "", new { @class = "nav nav-pills" })

                    @Html.ActionLink("Delete Category", "Delete", "", new { @class = "nav nav-pills" })

                    @Html.ActionLink("Details Category", "Details", "", new { @class = "nav nav-pills" })

                </td>
            </tr>
        }
</table>

