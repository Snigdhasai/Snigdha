@using SecondMVCAppWithDB.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categoty List</h2>
@Html.ActionLink("Create Category","Create","",new {@class="nav nav-pills"})

@*<table class="table table-striped">*@
    <table class="table table-hover">
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Description</th>
        </tr>
        @foreach (var item in ViewBag.catlist)
        {
<tr>
    <td>@item.catid</td>
    <td>@item.catname</td>
    <td>@item.Description</td>
    <td>
        @Html.ActionLink("Edit Category", "Edit",new { id=item.catid})

        @Html.ActionLink("Delete Category", "Delete", new { id = item.catid })

        @Html.ActionLink("Details Category", "Details", new { id = item.catid })

    </td>
</tr>
        }
    </table>


